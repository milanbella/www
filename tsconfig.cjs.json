{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./distc",
		"inlineSourceMap": false,
		"inlineSources": false,
		"declaration": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"typeRoots": [
		"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/test.ts",
		"src/**/*.spec.ts"
	]
}
